<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bin1"
        android:height="100dp"
        android:width="200dp"
        android:text="Начать игру"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bin2"
        android:height="50dp"
        android:width="200dp"
        android:text="Коллекция элементов"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/bin1"
        android:layout_alignLeft="@+id/bin1"
        android:layout_alignStart="@+id/bin1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bin3"
        android:height="50dp"
        android:width="200dp"
        android:text="Достижения"
        android:layout_below="@+id/bin2"
        android:layout_alignLeft="@+id/bin2"
        android:layout_alignStart="@+id/bin2"
        android:layout_marginTop="50dp" />

</RelativeLayout>

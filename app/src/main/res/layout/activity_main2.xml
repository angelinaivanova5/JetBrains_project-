<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/fon8">

    <LinearLayout
        android:id="@+id/element_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bin4">


        <Button
            android:id="@+id/bin20"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/backachiv"
            android:textSize="80sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bin21"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/backachiv"
            android:textSize="80sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/bin4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/bin22"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bin22"
        android:layout_marginTop="105dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/begin"
        android:text="Выбери Элемент"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bin22"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/element_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/begin2"
        android:text="Результат"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/backg">

    <Button
        android:id="@+id/bin20"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/colorPrimary"
        android:text=""
        android:textAllCaps="false"
        android:layout_above="@+id/bin22"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/bin21"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/colorPrimary"
        android:text=""
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="250dp"/>

    <Button
        android:id="@+id/bin4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/button"
        android:text="Выбери Элемент"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bin22"
        android:layout_alignStart="@+id/bin22"
        android:layout_marginTop="105dp" />

    <Button
        android:id="@+id/bin22"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bin21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/result"
        android:text="Результат"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>